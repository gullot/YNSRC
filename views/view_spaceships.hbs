<header>
    <h1>Your Neighborhood Spaceship Repair Center</h1>
</header>
<h2>Spaceships</h2>
<table id="spaceship-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes --}}
        {{#each data}}
        <tr data-value={{this.ID}}>
            <td>{{this.ID}}</td>
            <td>{{this.Make}}</td>
            <td>{{this.Model}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.customerName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<form id="add-spaceship-form-ajax">
    <fieldset>
        <legend>Add new spaceship:</legend>
        <label for="input-owner">Owner:</label>
        <select name="input-owner" id="input-owner">
            <option value="test">Select a Customer</option>
            {{#each customers}}
            <option value="{{this.customerID}}">{{this.customerName}}</option>
            {{/each}}
        </select>
        <label for="input-make" class="required">Spaceship Make:</label>
        <input type="text" id="input-make" name="input-make" required>
        <label for="input-model" class="required">Spaceship Model:</label>
        <input type="text" id="input-model" name="input-model" required><br>
        <input type="submit" value="Add">
    </fieldset>
</form>

