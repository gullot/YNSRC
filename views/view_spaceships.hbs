<header>
        <h1>Your Neighborhood Spaceship Repair Center</h1>
</header>
<h2>Spaceships</h2>
    <table id="spaceship-table">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the attributes --}}
            {{#each data}}
            <tr>
                <td>{{this.spaceshipID}}</td>
                <td>{{this.spaceshipMake}}</td>
                <td>{{this.spaceshipModel}}</td>
                <td>{{this.customerID}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

