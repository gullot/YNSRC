<header>
        <h1>Your Neighborhood Spaceship Repair Center</h1>
</header>
<h2>Spaceships</h2>
    <table id="spaceship-table">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the attributes --}}
            {{#each data}}
            <tr>
                <td>{{this.spaceshipID}}</td>
                <td>{{this.spaceshipMake}}</td>
                <td>{{this.spaceshipModel}}</td>
                <td>{{this.customerID}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <form>
        <fieldset>
            <legend>Find spaceship by:</legend>
            <select>
                <option value="spaceshipOwner" id="spaceshipOwner" name="spaceshipOwner">Spaceship Owner</option>
                <option value="spaceshipMake" id="spaceshipMake" name="spaceshipMake">Spaceship Make</option>
                <option value="spaceshipModel" id="spaceshipModel" name="spaceshipModel">Spaceship Model</option>
            </select>
            <input type="text" id="spaceshipSearch"><br>
            <input type="submit" value="Search">
        </fieldset>
    </form>
    <form>
        <fieldset>
            <legend>Add new spaceship:</legend>
            <label for="customerName">Owner</label><br>
            <select>
                <option>Regina</option>
                <option>George</option>
                <option>Lee</option>
            </select><br>
            <label for="spaceshipMake">Spaceship Make</label><br>
            <input type="text" id="spaceshipMake" name="spaceshipMake"><br>
            <label for="spaceshipModel">Spaceship Model</label><br>
            <input type="text" id="spaceshipModel" name="spaceshipModel"><br>
            <input type="submit" value="Add">
        </fieldset>
    </form>
