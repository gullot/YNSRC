<header>
    <h1>Your Neighborhood Spaceship Repair Center</h1>
</header>
<h2>Invoice Details</h2>
<table id="invoicedetails-table">

        {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes --}}
        {{#each data}}
        <tr>
            <td>{{this.invoiceID}}</td>
            <td>{{this.serviceID}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.spaceshipID}}</td>
            <td>{{this.totalCost}}</td>
            <td>{{this.serviceName}}</td>
            <td>{{this.serviceCost}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<form id="add-invoicedetail-form-ajax">
        <fieldset>
            <legend>Add a new invoice-service relationship: </legend>
            <label for="input-invoiceID">Invoice ID#: </label>
            <select name="input-invoiceID" id="input-invoiceID">
                <option value="test">Select an invoice</option>
                {{#each invoices}}
                <option value = "{{this.invoiceID}}">{{this.invoiceID}}</option>
                {{/each}}
            </select>
            <br>
            <label for="input-services">Repair Services: </label>
            {{#each services}}
            <div>
            <input type="radio" name="service" id="{{this.repairID}}" value={{this.cost}} class="service-radio">
            <label for="{{this.repairName}}">{{this.repairName}}</label>
            </div>
            {{/each}}
            <br>
            <input type="submit">
        </fieldset>
    </form>
