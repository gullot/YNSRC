<header>
    <h1>Your Neighborhood Spaceship Repair Center</h1>
</header>
<h2>Invoices</h2>
<table id="invoices-table">

        {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>
                Delete
            </th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes --}}
        {{#each data}}
        <tr>
            <td>{{this.ID}}</td>
            <td>{{this.Cost}}</td>
            <td>{{this.spaceshipID}}</td>
            <td><input type="submit" value="Delete"></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<form id="add-invoice-form-ajax">
        <fieldset>
            <legend>Add a new invoice: </legend>
            <label for="input-spaceshipOwner">Owner: </label>
            <input type="text" name="input-spaceshipOwner" id="input-spaceshipOwner" required>
            <label for="input-spaceshipModel">Model: </label>
            <input type="text" name="input-spaceshipModel" id="input-spaceshipModel" required>
            <br>
            <label for="input-services">Repair Services: </label>
            {{#each services}}
            <div>
            <input type="checkbox" name="{{this.repairName}}" id="{{this.repairName}}" value={{this.cost}} class="service-checkbox">
            <label for="{{this.repairName}}">{{this.repairName}}</label>
            </div>
            {{/each}}
            <br>
            <input type="submit">
        </fieldset>
    </form>
<footer>
<p>&copy; 2023 Seattle Squad OSU CS340</p>
</footer>

<script src="./js/add_invoice.js"></script>
